{
    "ts-node": {
        "transpileOnly": false,
        "files": true,
        "compilerOptions": {}
    },
    "node": {},
    "compilerOptions": {
        "target": "es2016",
        "lib": ["ESNext.AsyncIterable"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": ["src/**/*"]
}
